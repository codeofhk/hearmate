{
  "manifest_version": 3,
  "name": "HearMate - Live Captions & ISL Avatar",
  "version": "1.0.0",
  "description": "Real-time captions and ISL avatar",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
